/**index.wxss**/

view,
image,
text {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.clearfix::after {
  content: "";
  height: 0;
  display: block;
  visibility: hidden;
  clear: both;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.clearfix::after {
  content: "";
  height: 0;
  display: block;
  visibility: hidden;
  clear: both;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-column-between {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.flex-column-around {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

text {
  display: inline-block;
  font-size: 30rpx;
}

.p10r {
  padding: 10rpx;
}

.p10 {
  padding: 10px;
}

.p20 {
  padding: 20px;
}

.p10-l-r {
  padding: 0 10px;
}

.p10-b {
  padding-bottom: 10px;
}

.w25 {
  display: inline-block;
  width: 25%;
}

.w30 {
  width: 30%
}

.w70 {
  max-width: 70%;
}

.w50 {
  display: inline-block;
  width: 50%;
  border-bottom: 1px dashed #E4ECF3;
}

.m10 {
  margin: 10px;
}

.br5 {
  border-radius: 5px;
}

.bd {
  background-color: #fff;
  border: 1px solid #E4ECF3;
}

.w30r-h30r {
  width: 30rpx;
  height: 30rpx;
}

.m-t10 {
  margin-top: 10px;
}

.m-r10 {
  margin-right: 10px;
}
.m-r5 {
  margin-right: 5px;
}

.m-b10 {
  margin-top: 10px;
}

.m-l10 {
  margin-right: 10px;
}

.m-t-b {
  margin: 10px 0;
}

.f36r-bold {
  font-size: 36rpx;
  font-weight: 700;
}

.join-people {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 5px;
}

.series-page {
  background-color: #f5f5f5;
}

.series-head {
  border-radius: 5px;
}

.series-title {
  display: block;
  font-size: 28rpx;
}

.series-banner {
  width: 100%;
  position: relative;
}

.series-banner-img {
  width: 100%;
}

.series-join {
  position: absolute;
  width: 100%;
  bottom: 5px;
  color: #fff;
  line-height: 32rpx;
}

.edu-plan-box {
  position: relative;
  display: inline-block;
  padding: 3px 10px;
  border: 1px solid #43BC60;
  vertical-align: middle;
}

.edu-plan-word {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.edu-plan-img {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
}

.operating {
  background-color: #fafafa;
}

.join-study {
  background-color: #43BC60;
  color: #fff;
  padding: 5px 30px;
  border: 1px solid #36964D;
}

.series-common-title {
  border-bottom: 1px solid #E4ECF3;
}

.series-intro-title-active {
  color: #48BE64;
  border-bottom: 2px solid #4cb360;
}

.aim {
  width: 70%;
  margin-left: 20px;
}

.task {
  width: 80%;
}

.dot-o {
  vertical-align: middle;
}

.task-title {
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.join-button {
  background-color: #43BC60;
  padding: 5px 10px;
  color: #fff;
  font-size: 18rpx;
}

.content-chapter {
  background-color: #F5F5F5;
}

.user-evaluation-star {
  width: 25rpx;
  height: 25rpx;
}

.avatar-img {
  width: 100%;
  border-radius: 50%;
}

.special-img-box {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  background-color: #43BC60;
  display: inline-block;
  vertical-align: middle;
}

.special-img {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 40%;
  height: 40%;
}

.new-avatar-img {
  width: 25%;
  border-radius: 50%;
}